<Alloy>
	<Window class='container'>
		<View ns="Ti.Map" id="map">
			<!-- annotation styled via tss file -->
			<Annotation id="annotation1"/>

			<!-- annotation styles via inline style -->
			<Annotation title="Palo Alto" latitude="37.47" longitude="-122.12"/>

			<!-- platform-specific annotations -->
			<Annotation id="annotation2" platform="android"/>
			<Annotation id="annotation3" platform="ios"/>

			<!-- annotation via <Require> tag -->
			<!-- 
			    TODO: https://jira.appcelerator.org/browse/ALOY-225
			    The above ticket needs to be resolved before Annotations can be 
			    added in markup via <Require> on Android.
			-->
			<Require src="annotationView" title="Sunnyvale" latitude="37.37" longitude="-122.03" platform="ios,mobileweb"/>

			<!-- 
				Lets add one more UI component to show Annotations being
			    declared side-by-side with child components. Map subviews
			    will appear on iOS only, but will not adversely effect 
			    other platforms. 
			-->
			<ImageView id="footerImage"/>
		</View>
	</Window>
</Alloy>
